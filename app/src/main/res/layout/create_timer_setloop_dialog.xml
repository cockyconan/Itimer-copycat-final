<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF" >

    <RelativeLayout
        android:layout_width="291dp"
        android:layout_height="212dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:gravity="center"
            android:padding="20dp"
            android:text="Set loop"
            android:textColor="#FFD306"
            android:textSize="20dp"
            app:fontFamily="casual" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="143dp"
                android:layout_marginRight="143dp"
                android:layout_marginBottom="13dp"
                android:text="inform me every"
                android:textColor="#FF5722"
                android:textSize="18sp"
                app:fontFamily="casual" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="18dp"
                android:text="days"
                android:textColor="#FF5722"
                android:textSize="18sp"
                app:fontFamily="casual" />

            <EditText
                android:id="@+id/create_timer_setloop_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="92dp"
                android:layout_marginRight="92dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textColor="#E91E63"
                android:textSize="30sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/create_timer_setloopdialog_buttoncancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/create_timer_click_effect"
            android:foreground="@drawable/dialog_bg"
            android:onClick="onClick"
            android:text="cancel" />

        <Button
            android:id="@+id/create_timer_setloopdialog_buttonok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/create_timer_click_effect"
            android:foreground="@drawable/dialog_bg"
            android:onClick="onClick"
            android:text="@android:string/ok" />


    </RelativeLayout>

</RelativeLayout>